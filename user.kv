#:kivy 2.1.0
# import get_color_from_hex kivy.utils
<MDLabel>:
    halign:'center'
MDScreen:
    name:"user_screen"
    address:address
    balance:balance
    internet_speed:internet_speed
    user_name:user_name
    MDBoxLayout:
        pos_hint: {"top": 1}
        orientation: 'vertical'
        MDTopAppBar:
            id:user_name
            title: ""
            right_action_items: [['logout', lambda x: app.change_screen('loginpage', 'right'), 'Log Out']]
            md_bg_color: get_color_from_hex('#0F0F0F')
            pos_hint: {"top": 1}

        OneLineIconListItem:
            id:internet_speed
            text: ""
            halign: "left"    
            IconLeftWidget:
                icon: "web"
        OneLineIconListItem:
            id:balance
            text:""
            halign: "left"    
            IconLeftWidget:
                icon: "cash"
        OneLineIconListItem:
            id:address
            text:""
            halign: "left"    
            IconLeftWidget:
                icon: "home"
